#include<bits/stdc++.h>
using namespace std;
int main()
{
    long long int t,n1,n2,m,r,p,s,k;
    cin>>t;
    while(t--)
    {r=0;
        cin>>n1>>n2>>m;
            if(m*(m+1)/2<=n1&&m*(m+1)/2<=n2)
            {
                k=m*(m+1);
                cout<<n1+n2-k<<endl;
            }
            else 
            {
                p=min(n1,n2);
                s=max(n1,n2);
        
            cout<<s-p<<endl;
            }
    }
    return 0;
}
