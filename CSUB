#include <stdio.h>
#include<string.h>
int main() {
    long long int t,n,i,a,p;
    char str[100001];
    scanf("%lld",&t);
    while(t--)
    { a=0;
        scanf("%lld",&n);
        scanf("%s",str);
        for(i=0;i<n;i++)
        {
            if(str[i]=='1')
            {
                a++;
            }
        }
        p=(a*(a+1))/2;
        printf("%lld\n",p);
    }
	return 0;
}

