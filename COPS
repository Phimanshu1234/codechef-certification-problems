#include <stdio.h>
int main() {
	long long int t,m,x,y,i,a[101],count,d,j,l,r,b,k;
	scanf("%lld",&t);
	while(t--)
	{
	    count=0;
	    scanf("%lld%lld%lld",&m,&x,&y);
	    d=x*y;
	    for(i=0;i<101;i++)
	    {
	        a[i]=0;
	    }
	    for(i=0;i<m;i++)
	    {
	        scanf("%lld",&b);
	        a[b]=1;
	        if(b+d>100)
	        {
	            r=100;
	        }
	        else
	        {
	            r=b+d;
	        }
	        for(j=b+1;j<=r;j++)
	        {
	            a[j]=1;
	        }
	        if(d>b)
	        {
	            l=1;
	        }
	        else
	        {
	            l=b-d;
	        }
	        for(k=b-1;k>=l;k--)
	        {
	            a[k]=1;
	        }
	    }
	    for(i=1;i<=100;i++)
	    {
	        if(a[i]==0)
	        {
	            count++;
	        }
	    }
	    printf("%lld\n",count);
	}
	return 0;
}
