#include <stdio.h>
int main()
{
    int t,x,y,count;
    scanf("%d",&t);
    while(t--)
    {count=0;
        scanf("%d%d",&x,&y);
        if(x>y)
        {
            if(x==2*y)
            {
                printf("%d\n",y);
            }
            else
            {
             printf("%d\n",x-y);  
            }
        }
        if(x<=y)
        {
            printf("0\n");
        }
    }
    return 0;
}

