#include <stdio.h>
int main()
{
    int r,c,k,A,B,a,b,T;
    scanf("%d",&T);
    while(T--)
    {
        scanf("%d%d%d",&r,&c,&k);
     if(r-k<=1)
     {
         a=1;
     }
     else
     {
      a=r-k;
     }
     if(r+k>=8)
     {
         A=8;
     }
     else
     {
         A=r+k;
     }
     A=A-a+1;
     if(c-k<=1)
     {
       b=1;
     }
     else
     {
       b=c-k;
     }
     if(c+k>=8)
     {
         B=8;
     }
     else
     {
         B=c+k;
     }
     B=B-b+1;
     printf("%d\n",A*B);
    }
    return 0;
}

